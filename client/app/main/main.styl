#toast-container
  & > div
    font-size 30px
    padding 30px 60px
    text-align center
  & > .toast-error, & > .toast-info
    background rgb(193, 36, 36) !important

.jumbotron.vcenter
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  h1
    font-size 6.5em
  h2
    font-size 2.5em
    
.jumbotron.inverse
  background #000
  color #fff

.hero-unit
    background #4393B9
    color #F5F5F5
    padding 30px 15px
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center