#toast-container
  & > div
    font-size 30px
    padding 30px 60px
    text-align center

.panel-heading
  padding 20px 15px

.jumbotron.vcenter
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  h1
    font-size 6.5em
  h2
    font-size 2.5em
    
.jumbotron.inverse
  background #000
  color #fff
  
.jumbotron.default
  background #f85
  color #222

form#authentication
  background transparent
  input, button, input:focus, button:focus
    background transparent !important
    border 0 !important
    color transparent !important
    box-shadow none !important
    outline none !important
    font-size 1px !important