#toast-container
  & > div
    font-size 30px
    padding 30px 60px
    text-align center


.jumbotron.vcenter
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  h1
    font-size 6.5em
  h2
    font-size 2.5em
    
.jumbotron.inverse
  background #000
  color #fff
  
.jumbotron.default
  background #f96
  color #333

form#authentication
  background transparent
  input, button, input:focus, button:focus
    height 0 !important
    width 0 !important
    margin 0 !important
    padding 0 !important
    background transparent !important
    border 0 !important
    color transparent !important
    box-shadow none !important